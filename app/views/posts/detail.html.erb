<div id="title">
  <div>
    <p><%= @post.created_at.strftime('%Y/%m/%d')  %> 書いた人<%= @post.user.email %></p>
    <h1><%= @post.title %></h1>
  </div>
</div>

<div id="article_wrap">
  <div id="content">
    <div>
      <h2><%= @post.body %></h2>
    </div>
  </div>
</div>

<div id="sidebar">
 <h2>★PV数ランキング</h2>
   <ul>
   <% @popular.each do |post| %>
     <li><%= link_to Post.find_by(id: post).title, detail_post_path(post) %><span><%= (@redis.zscore "ranking", "#{post}").floor %>PV</span></li>
   <% end %>
   </ul>
</div>
<div class="clear"></div>
</div>
